{{!
    @template mod_collabora/iframe

    Displays collabora iframe on boost based themes

    Example context (json):
    {
        "id" : 1,
        "embedded" : 1,
        "frameheight" : "400px",
        "framehwidth" : "800px"
    }

}}

<div class="embed-responsive collabora-frame{{#embedded}} embedded{{/embedded}}"
    {{^embedded}}style="height:{{frameheight}};width:{{framewidth}}"{{/embedded}}
>
    <iframe
        {{^embedded}}style="height:{{frameheight}};width:{{framewidth}}"{{/embedded}}
        class="border embed-responsive-item h-100"
        id="collaboraiframe_{{id}}"
        src="about:blank">
    </iframe>
</div>
