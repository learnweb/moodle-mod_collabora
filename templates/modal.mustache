{{!
    @template mod_collabora/modal

    Displays the modal dialog with the collabora iframe

    Example context (json):
    {
        "id" : 1,
        "legacy" : 1,
        "name" : "Test pad"
    }

}}

<div class="collaboramodal modal fade{{#legacy}} legacy{{/legacy}}" id="collaboramodal_{{id}}">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h3 class="my-0 py-0">
            <button type="button" class="btn btn-primary" data-dismiss="modal" title="{{#str}}restorewindowsize, mod_collabora{{/str}}" >
                <i class="fa fa-compress fa-lg" aria-hidden="true"></i>
            </button>
            {{name}}
        </h3>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <iframe class="border" id="collaboraiframe2_{{id}}" src="about:blank" allowFullscreen></iframe>
      </div>

    </div>
  </div>
</div>
