{{!
    @template mod_collabora/iframe_legacy

    Displays collabora iframe in legacy mode (pre boost based themes)

    Example context (json):
    {
        "id" : 1,
        "embedded" : 1,
        "frameheight" : "400px",
        "framehwidth" : "800px"
    }

}}

<iframe
    class="collaboraiframe"
    id="collaboraiframe_{{id}}"
    src="about:blank"
    {{#embedded}}style="height:100vh;width:100%"{{/embedded}}
    {{^embedded}}style="height:{{frameheight}};width:{{framewidth}}"{{/embedded}}
></iframe>
